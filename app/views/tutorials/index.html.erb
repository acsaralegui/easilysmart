
<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">From basic to smart</h1>

  <hr />

  <% @tutorial.each do |tutorial| %>
    <div class="card col-4 offset-4">
      <h2 class="handle">
        <%=link_to tutorial.title, tutorial_path(tutorial) %></h2>
        <%= image_tag tutorial.image.url.to_s, class: 'img-fluid' %>

      <h5 class="gram-actions float-right">
        <br class="clear-fix" />
        <%= tutorial.System_type %>
      </h5>
      <br />
      <div class="row">
        <div class="col-sm-8 col-12">
          <%= tutorial.description %>
        </div>
        <div class="col-sm-4 col-12 text-center">
          <%= link_to 'Learn', tutorial_path(tutorial), class: 'btn btn-dark btn-sm' %>
        </div>
      </div>
      <br class="clr" />
    </div>
  <% end %>
</div>
